{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": [
    "server.tsx",
    "websocket.server.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*",
    "app.ts"
  ]
}
