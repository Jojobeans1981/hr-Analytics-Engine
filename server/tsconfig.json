{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/app.ts",
    "src/controllers/**/*",
    "src/routes/**/*", 
    "src/services/**/*",
    "src/utils/**/*",
    "src/models/**/*",
    "src/middleware/**/*",
    "src/dtos/**/*",
    "src/scripts/**/*",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
