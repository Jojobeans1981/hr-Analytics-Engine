{
  "compilerOptions": {
    /* Core settings */
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    
    /* Module handling */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Node environment */
    "moduleResolution": "node",
    "types": ["node", "express"],

    /* Source maps for debugging */
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/server.ts"],
  "exclude": [
    "**/*.js",
    "node_modules",
    "dist"
  ]
}